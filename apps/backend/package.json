{
  "name": "backend",
  "version": "1.0.0",
  "description": "Express backend",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch --inspect src/index.ts",
    "prebuild": "pnpm --filter=@shared/types build",
    "build": "tsup",
    "type-check": "tsc --noEmit",
    "start": "node dist/index.js",
    "prisma:migrate": "prisma migrate dev",
    "prisma:reset": "prisma migrate reset --force",
    "prisma:generate": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "6.19.1",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.25",
    "@types/node": "^20.10.6",
    "prisma": "6.19.1",
    "tsup": "^8.5.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
